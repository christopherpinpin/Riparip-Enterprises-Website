<div class="col-sm-4 col-lg-3 py-2">
    <div class="card h-100 product_card" style="border-radius: 15px;">
        <img src="{{prodpic}}" class="card-img-top px-3 py-3" alt="test">
        <div class="card-body" >
            <h5 class="card-title" style="font-weight: 800; font-size: 15px;"><a href="/products/{{productname}}/{{model}}" style="color: #000066;">{{productname}}</a></h5>
            <h5 class="card-title" style="font-weight: 800; font-size: 12px;">{{model}}</h5>
            <p class="card-text" style="font-size: 13px;">{{productdesc}}</p>
        </div>
        <div class="card-footer d-flex justify-content-end align-items-right" style="border: none; background-color: white; border-radius: 15px;">
            <button type="button" class="add_cart" data-toggle="modal" data-target="#myModal{{productname}}{{model}}">
                Inquire
            </button>
        </div>
    </div>
</div>

<div class="modal" id="myModal{{productname}}{{model}}">
    <div class="modal-dialog">
        <div class="modal-content text-center ">
    
        <!-- Modal Header -->
        <div class="modal-header">
            <h4 class="modal-title" style="font-weight: 800;">{{productname}}</h4>
            <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
    
        <!-- Modal body -->
        <div class="modal-body">
            <div>
            <label for="quantity">Quantity: </label>
            <div>
            <form method="post" action="/addprodtocart/{{productname}}/{{model}}">
            </div><input class="item_select_qty" style="width: 100px; border-radius: 5px; border: solid 1px black; padding: 8px;" type="number" id="{{productname}}{{model}}qty" name="quantity" min="1" required>
            </div>
        </div>
    
        <!-- Modal footer -->
        <div class="modal-footer">
            <button onclick="location.href='/products'" type="button" class="addProd">Add to cart</button>
            <input type="hidden" value="{{productname}}">
            <input type="hidden" value="{{model}}">
            </form>
        </div>
        </div>
    </div>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script type="text/javascript" src="/js/addcart.js"></script>